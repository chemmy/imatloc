<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
  <ListView android:layout_width="match_parent" android:id="@+id/listMessages" android:layout_height="wrap_content" android:layout_weight="2"></ListView>
  <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_weight="0">
      <EditText android:layout_width="wrap_content" android:id="@+id/edtMsg" android:text="EditText" android:layout_height="wrap_content" android:layout_weight="2"></EditText>
      <Button android:text="Send" android:id="@+id/btnSend" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0"></Button>
  </LinearLayout>
</LinearLayout>
